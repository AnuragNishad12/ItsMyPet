<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MissingReport">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/autour_one"
                android:text="Register Your Missing Pet"
                android:textColor="#FF9800"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/textView10"
                app:layout_constraintStart_toStartOf="@+id/textView10"
                app:layout_constraintTop_toBottomOf="@+id/textView10"
                app:layout_constraintVertical_bias="0.0">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:src="@drawable/profile"
                        app:civ_border_color="#FF000000"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.498"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <EditText
                android:id="@+id/Raddress"
                android:layout_width="376dp"
                android:layout_height="41dp"
                android:layout_marginTop="4dp"
                android:background="@null"
                android:ems="10"
                android:fontFamily="@font/autour_one"
                android:hint="Address..."
                android:inputType="textPersonName"
                android:padding="5dp"
                android:textColor="#4C4C4C"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/Rname"
                app:layout_constraintStart_toStartOf="@+id/Rname"
                app:layout_constraintTop_toBottomOf="@+id/Rname" />

            <EditText
                android:id="@+id/Rname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:ems="10"
                android:fontFamily="@font/autour_one"
                android:hint="Name..."
                android:inputType="textPersonName"
                android:padding="5dp"
                android:textColor="#333333"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/textView12"
                app:layout_constraintStart_toStartOf="@+id/textView12"
                app:layout_constraintTop_toBottomOf="@+id/textView12" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Upload Pet Image"
                android:textColor="#373737"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/cardView2"
                app:layout_constraintStart_toStartOf="@+id/cardView2"
                app:layout_constraintTop_toBottomOf="@+id/cardView2" />

            <EditText
                android:id="@+id/RpinCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:ems="10"
                android:fontFamily="@font/autour_one"
                android:hint="PinCode..."
                android:inputType="textPersonName"
                android:padding="5dp"
                android:textColor="#454545"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/Raddress"
                app:layout_constraintStart_toStartOf="@+id/Raddress"
                app:layout_constraintTop_toBottomOf="@+id/Raddress" />

            <EditText
                android:id="@+id/Country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:ems="10"
                android:fontFamily="@font/autour_one"
                android:hint="Country...."
                android:inputType="textPersonName"
                android:padding="3dp"
                android:textColorHint="#757474"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/RpinCode"
                app:layout_constraintStart_toStartOf="@+id/RpinCode"
                app:layout_constraintTop_toBottomOf="@+id/RpinCode" />

            <EditText
                android:id="@+id/Rdetails"
                android:layout_width="398dp"
                android:layout_height="93dp"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:ems="10"
                android:hint="Give More Details"
                android:inputType="textMultiLine|textPersonName"
                android:padding="3dp"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/Country"
                app:layout_constraintStart_toStartOf="@+id/Country"
                app:layout_constraintTop_toBottomOf="@+id/Country" />

            <Button
                android:id="@+id/RButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:text="Register"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/Rdetails"
                app:layout_constraintStart_toStartOf="@+id/Rdetails"
                app:layout_constraintTop_toBottomOf="@+id/Rdetails" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>